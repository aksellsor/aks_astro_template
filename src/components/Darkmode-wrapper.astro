<script is:inline>
  if (localStorage.getItem('darkmode') === 'dark') {
    document.querySelector('html').dataset.theme = 'dark';
  }
  if (localStorage.getItem('darkmode') === 'light') {
    document.querySelector('html').dataset.theme = 'light';
  }
  if (!localStorage.getItem('darkmode')) {
    let theme = window.matchMedia('(prefers-color-scheme: dark)')
      ? 'dark'
      : 'light';
    localStorage.setItem('darkmode', theme);
  }
</script>
<script>
  const toggleDarkmode = () => {
    let enabled = document.querySelector('html').dataset.theme === 'dark';

    if (enabled) {
      localStorage.setItem('darkmode', 'light');
      document.querySelector('html').dataset.theme = 'light';
    } else {
      localStorage.setItem('darkmode', 'dark');
      document.querySelector('html').dataset.theme = 'dark';
    }
    // localStorage.setItem('darkMode', !status);
  };
  const init = () => {
    document
      .querySelector('#darkmode-toggle-btn')
      ?.addEventListener('click', toggleDarkmode);
  };
  const unload = () => {
    document
      .querySelector('#darkmode-toggle-btn')
      ?.removeEventListener('click', toggleDarkmode);
  };

  // Proper init and cleanup on page transition
  document.addEventListener('DOMContentLoaded', init);
  window.swup?.hooks?.on('page:view', init);
  window.swup?.hooks?.before('content:replace', unload);
</script>

