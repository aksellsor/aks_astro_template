<style>
  #darkmode-toggle-btn-wrapper.hide {
    transition: all 0.3s ease-out;
    transform: translateY(50%);
    opacity: 0;
  }
  #darkmode-toggle-btn {
    z-index: 1;
    cursor: pointer;
    position: fixed;
    bottom: 1rem;
    left: 0.75rem;
    transition: all 0.5s ease-out;
    --active-color: #1868e3;
    --active-color-hover: #5096ff;
    --inactive-color: #d3d3d6;
    aspect-ratio: 292 / 142;
    height: 1.875em;
  }
  #darkmode-toggle-btn svg {
    overflow: visible;
  }

  html[data-theme='light'] #darkmode-toggle-btn:hover svg .toggle-background {
    fill: #000;
  }

  .toggle-background {
    fill: var(--inactive-color);
    transition: fill 0.4s;
  }

  .toggle-circle-center {
    transform-origin: center;
    transition: transform 0.6s;
  }

  .toggle-circle {
    transform-origin: center;
    transition: transform 0.45s;
    backface-visibility: hidden;
  }

  .toggle-circle.left {
    transform: scale(1);
  }

  .toggle-circle.right {
    transform: scale(0);
  }

  .toggle-icon {
    transition: fill 0.4s;
  }

  .toggle-icon.on {
    fill: var(--inactive-color);
  }

  .toggle-icon.off {
    fill: #eaeaec;
  }

  /* CHECKED */
  html[data-theme='dark'] #darkmode-toggle-btn:hover svg .toggle-background {
    fill: var(--active-color-hover);
  }
  html[data-theme='dark'] #darkmode-toggle-btn .toggle-background {
    fill: var(--active-color);
  }
  html[data-theme='dark'] #darkmode-toggle-btn .toggle-circle-center {
    transform: translateX(150px);
  }
  html[data-theme='dark'] #darkmode-toggle-btn .toggle-circle.left {
    transform: scale(0);
  }
  html[data-theme='dark'] #darkmode-toggle-btn .toggle-circle.right {
    transform: scale(1);
  }
  html[data-theme='dark'] #darkmode-toggle-btn .toggle-icon.on {
    fill: #fff;
  }
  html[data-theme='dark'] #darkmode-toggle-btn .toggle-icon.off {
    fill: var(--active-color);
  }
</style>
